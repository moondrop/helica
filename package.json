{
  "name": "helica",
  "version": "0.1.0",
  "description": "A blazing fast micro web framework made for rapid development of RESTful APIs",
  "main": "index.js",
  "scripts": {
    "test": "xo && mocha ./tests/* --exit",
    "lint": "xo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moondrop/helica.git"
  },
  "files": [
    "index.js",
    "lib/"
  ],
  "keywords": [
    "helica",
    "web",
    "server",
    "webserver",
    "rest",
    "api",
    "routing",
    "http",
    "https",
    "crud",
    "restful",
    "ssl",
    "fast"
  ],
  "author": "riyacchi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/moondrop/helica/issues"
  },
  "homepage": "https://helica.moondrop.io",
  "xo": {
    "space": 4,
    "ignores": [
      "tests/**"
    ],
    "rules": {
      "new-cap": 0,
      "arrow-parens": 0,
      "unicorn/filename-case": 0,
      "unicorn/no-for-loop": 0,
      "object-curly-spacing": 0,
      "no-negated-condition": 0,
      "no-await-in-loop": 0,
      "complexity": 0,
      "max-params": [
        "warn",
        5
      ]
    }
  },
  "devDependencies": {
    "mocha": "^8.1.3",
    "xo": "^0.33.1"
  },
  "dependencies": {
    "kleur": "^4.1.3",
    "ora": "^5.1.0",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v18.11.0"
  }
}
